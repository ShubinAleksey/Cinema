@page
@model Cinema.Pages.EditModel

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактировать</h1>

<h4>Сеанс</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieSession.MovieName" class="control-label"></label>
                <input asp-for="MovieSession.MovieName" class="form-control" />
                <span asp-validation-for="MovieSession.MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieSession.SessionTime" class="control-label"></label>
                <input asp-for="MovieSession.SessionTime" class="form-control" />
                <span asp-validation-for="MovieSession.SessionTime" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="MovieSession.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
