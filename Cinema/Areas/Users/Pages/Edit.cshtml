@page
@model Cinema.Areas.Users.Pages.EditModel
@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактировать</h1>

<h4>Пользователь</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentUser.UserName" class="control-label">Имя пользователя</label>
                <input asp-for="CurrentUser.UserName" class="form-control" />
                <span asp-validation-for="CurrentUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentUser.Email" class="control-label"></label>
                <input asp-for="CurrentUser.Email" class="form-control" />
                <span asp-validation-for="CurrentUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentUser.PhoneNumber" class="control-label"></label>
                <input asp-for="CurrentUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="CurrentUser.PhoneNumber" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="CurrentUser.Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
