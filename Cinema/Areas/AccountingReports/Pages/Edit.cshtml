@page
@model Cinema.Areas.AccountingReports.Pages.EditModel

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактировать</h1>

<h4>Расчётная ведомость</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountingReport.Name" class="control-label"></label>
                <input asp-for="AccountingReport.Name" class="form-control" />
                <span asp-validation-for="AccountingReport.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountingReport.EmployeeId" class="control-label">Имя пользователя</label>
                <select asp-for="AccountingReport.EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="AccountingReport.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountingReport.Salary" class="control-label"></label>
                <input asp-for="AccountingReport.Salary" class="form-control" />
                <span asp-validation-for="AccountingReport.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountingReport.Bonus" class="control-label"></label>
                <input asp-for="AccountingReport.Bonus" class="form-control" />
                <span asp-validation-for="AccountingReport.Bonus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountingReport.Absence" class="control-label"></label>
                <input asp-for="AccountingReport.Absence" class="form-control" />
                <span asp-validation-for="AccountingReport.Absence" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="AccountingReport.Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
