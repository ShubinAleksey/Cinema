@page
@model Cinema.Areas.PurchaseReports.Pages.EditModel

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактировать</h1>

<h4>Отчёт по закупкам</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PurchaseReport.Name" class="control-label"></label>
                <input asp-for="PurchaseReport.Name" class="form-control" />
                <span asp-validation-for="PurchaseReport.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseReport.Description" class="control-label"></label>
                <input asp-for="PurchaseReport.Description" class="form-control" />
                <span asp-validation-for="PurchaseReport.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseReport.DepartmentId" class="control-label"></label>
                <select asp-for="PurchaseReport.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                <span asp-validation-for="PurchaseReport.DepartmentId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="PurchaseReport.Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
